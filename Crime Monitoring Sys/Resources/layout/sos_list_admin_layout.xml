<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    tools:context=".sos_activity"
    >

    <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:backgroundTint="@color/abc_btn_colored_borderless_text_material"
            android:background="@android:drawable/dialog_holo_light_frame"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/lblName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sos_user_name"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/lblName"
                android:id="@+id/txtSosAdminUserName"
                />
                
                <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                 android:text="Coordinates :"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lblName"
                 android:id="@+id/lblSosType"
                />
            
                <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                 android:text="address_of_user"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/lblName"
                android:layout_toRightOf="@id/lblSosType"
                android:id="@+id/txtSosAdminLngLat"
                />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/sosAdminTime"
                android:text="Time Stamp :"
                android:layout_marginLeft="20dp"
                android:layout_above="@id/lblSosAdminStat"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                    android:id="@+id/txtSosAdminTime"
                 android:text="time_stamp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/sosAdminTime"
                android:layout_above="@id/txtSosAdminStatus"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                    android:text="Status :"
                    android:id="@+id/lblSosAdminStat"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSosAdminStatus"
                android:textColor="@android:color/white"
                android:text="comp_status"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@id/lblSosAdminStat"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update sos"
                android:id="@+id/btnUpdateSos"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                />

               <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trace location"
                android:id="@+id/btnTraceSos"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/btnUpdateSos"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
