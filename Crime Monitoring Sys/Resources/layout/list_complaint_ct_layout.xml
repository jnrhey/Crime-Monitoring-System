<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    >

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/abc_btn_colored_borderless_text_material"
            android:background="@android:drawable/dialog_holo_light_frame"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/lblName"/>
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="complaint_user_name"
                 android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                 android:layout_marginTop="20dp"
                 android:layout_toRightOf="@id/lblName"
                 android:id="@+id/txtCompUserName"
                />
                
                <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Complaint Type :"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lblName"
                 android:id="@+id/lblCompType"
                />
            
                <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="complaint_type"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/lblName"
                android:layout_toRightOf="@id/lblCompType"
                 android:id="@+id/txtComType"
                />


            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:text="Complaint Description :"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/lblCompType"
                android:id="@+id/lblComDesc"/>
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="complaint_description"
                android:textColor="@android:color/white"
                 android:layout_marginLeft="20dp"
                 android:layout_below="@id/lblComDesc"
android:layout_alignParentLeft="true"
                
                 android:id="@+id/txtCtCompDesc"
                />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Stamp :"
                android:textColor="@android:color/white"
                android:id="@+id/lblcompCtTimeStamp"
                android:layout_marginLeft="20dp"
                android:layout_above="@id/lblCompStat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time_stamp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:id="@+id/compCtTimeStamp"
                android:layout_toRightOf="@id/lblcompCtTimeStamp"
                android:layout_above="@id/lblCompStat"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:id="@+id/lblCompStat"
                android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCompStatus"
                android:text="comp_status"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/lblCompStat"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:id="@+id/btnRemoveComp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_light"
                android:backgroundTint="@color/colorPrimary"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
